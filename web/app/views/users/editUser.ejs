<% include ../inc/header %>
<div class="ui grid" ng-controller="AddUserController" ng-init='user=<%-JSON.stringify(user)%>'>

  <div class="three wide column"><p></p></div>

  <div class="twelve wide column">

    <div class="ui blue segment">
      <h1 class="ui header"><%= title %></h1>
      <form ng-submit="sauvegarder()" class="ui form">
        <div class="field">
          <label>Email</label>
          <input type="text" ng-model="user.email" name="title" value="" placeholder="Entrer un email">
        </div>
        <div class="field">
          <label>Mot de passe</label>
          <input type="password" ng-model="user.password" name="title" placeholder="password">
        </div>
        <div class="two fields">
          <div class="field">
            <label>Nom</label>
            <input type="text" ng-model="user.lastName" name="title" value="" placeholder="Entrer un nom">
          </div>
          <div class="field">
            <label>Prenom</label>
            <input type="text" ng-model="user.firstName" name="title" value="" placeholder="Entrer un prenom">
          </div>
        </div>
        <div class="field">
          <label>Groupes</label>
          <select class="ui fluid dropdown" multiple="" ng-model="user.groupes" ng-dropdown="{}" ng-dropdown-choice="groupes">
            <option value="">Groupes</option>
          </select>
        </div>

        <div class="field">
          <input class="ui green button" type="submit" value="Enregistrer">
        </div>
      </form>
    </div>
  </div>

  <div class="one wide column"><p></p></div>
</div>

<% include ../inc/footer %>
