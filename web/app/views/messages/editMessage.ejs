<% include ../inc/header %>

<div class="ui grid" ng-controller="AddMessageController">

  <div class="three wide column"><p></p></div>
  <div class="twelve wide column">

    <div class="ui blue segment">
      <h1 class="ui header"><%= title %></h1>

      <div class="ui divided list">
        {{message.titre}}
        <form class="" ng-submit="sauvegarder()">
            <div class="ui input focus">
                <input type="text" name="title" value="" placeholder="Entrer un titre" ng-model="message.titre">
            </div>
            <br/>
            <br/>
            <textarea id="messageInput" name="message" rows="8" cols="40"></textarea>
            <br/>
            <input type="submit" value="Envoyer">
        </form>
      </div>
    </div>
  </div>

  <div class="one wide column"><p></p></div>
</div>

<script type="text/javascript">
  CKEDITOR.replace("messageInput");
</script>

<% include ../inc/footer %>
