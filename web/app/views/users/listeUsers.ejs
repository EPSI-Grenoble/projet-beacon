<% include ../inc/header %>


<div class="ui grid">

  <div class="three wide column"><p></p></div>

  <div class="twelve wide column">

    <h2 class="ui header">
      <i class="users icon"></i>
      <div class="content">
        <%= title %>
        <div class="sub header"><%= subtitle %></div>
      </div>
    </h2>
    <br>
    <div class="ui cards">
        <% users.forEach(function(utilisateur){ %>
          <div class="card">
            <div class="content">
              <i style="float:right;" class="large floated mini ui user middle aligned icon"></i>
              <div class="header">
                <%= utilisateur.firstName %> <%= utilisateur.lastName %>
              </div>
              <div class="meta">
                <%= utilisateur.email %>
              </div>
              <div class="description">
                <%= utilisateur.groupes %>
              </div>
            </div>
            <div class="extra content">
              <div class="ui two buttons">
                <div class="ui basic blue button">Editer</div>
                <div class="ui basic red button">Supprimer</div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
  </div>

  <div class="one wide column"><p></p></div>
</div>

<% include ../inc//footer %>
