<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title><%- title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/components/semantic/dist/semantic.min.css">
  <% if (ENV_DEVELOPMENT) { %>
  <script src="http://localhost:35729/livereload.js"></script>
  <% } %>
</head>
<body>


<div class="ui page grid main-page pusher">
<div class="row">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <h1 class="ui header ui segment">Connexion</h1>
    <form action="/login" method="POST" class="ui fluid large form stacked  segment">
      <div class="required field">
        <label>Login</label>
        <div class="ui icon input">
          <input type="text" name="user" placeholder="Login">
          <i class="user icon"></i>
        </div>
      </div>
      <div class="required field">
        <label>Mot de passe</label>
        <div class="ui icon input">
          <input type="password" name="password" placeholder="Mot de passe">
          <i class="lock icon"></i>
        </div>
      </div>
      <div class="center aligned column row">
        <button type="submit" class="ui blue fluid large submit button">Connexion</button>
      </div>
    </form>
    <% if (message.length > 0) { %>
    <div class="ui error bottom attached message">
      <div class="header"><%= message %></div>
    </div>
    <% } %>
  </div>
  <div class="four wide column"></div>
</div>
</div>
<% include inc/footer %>
